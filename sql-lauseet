CREATE TABLE Kommentti(
lukuvinkki TEXT, 
kommentoija TEXT,
kommentti TEXT,
aika DATETIME DEFAULT (strftime('%H:%M %d.%m.%Y','now', 'localtime'))
);

CREATE TABLE Kirja (
id INTEGER PRIMARY KEY AUTOINCREMENT,
otsikko VARCHAR(100) NOT NULL,
kirjoittaja VARCHAR(100),
isbn VARCHAR(100),
luettu BOOLEAN NOT NULL DEFAULT 0
);

CREATE TABLE Blogi (
id INTEGER PRIMARY KEY AUTOINCREMENT,
otsikko VARCHAR(100) NOT NULL,
kirjoittaja VARCHAR(100),
url VARCHAR(100),
luettu BOOLEAN NOT NULL DEFAULT 0
);

CREATE TABLE Video (
id INTEGER PRIMARY KEY AUTOINCREMENT,
otsikko VARCHAR(100) NOT NULL,
tekija VARCHAR(100),
url VARCHAR(100),
katsottu BOOLEAN NOT NULL DEFAULT 0
);

CREATE TABLE Podcast (
id INTEGER PRIMARY KEY AUTOINCREMENT,
otsikko VARCHAR(100) NOT NULL,
tekija VARCHAR(100),
url VARCHAR(100),
kuunneltu BOOLEAN NOT NULL DEFAULT 0
);

CREATE TABLE Tag (
id INTEGER PRIMARY KEY AUTOINCREMENT,
tag VARCHAR(100) NOT NULL
);

CREATE TABLE Taglink (
id INTEGER PRIMARY KEY AUTOINCREMENT,
lukuvinkki TEXT,
tagid INTEGER,
FOREIGN KEY(tagid) REFERENCES Tag(id)
);

